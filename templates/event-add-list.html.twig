{#
/**
 * @file
 * Default theme implementation to list event types available for adding events.
 *
 * This list is displayed on the Add events admin page.
 *
 * Available variables:
 * - types: A list of event types, each with the following properties:
 *   - add_link: Link to create a piece of event of this type.
 *   - description: Description of this type of event.
 *
 * @see template_preprocess_event_add_list()
 *
 * @ingroup themeable
 */
#}
{% if types is not empty %}
  <dl>
    {% for type in types %}
      <dt>{{ type.add_link }}</dt>
      <dd>{{ type.description }}</dd>
    {% endfor %}
  </dl>
{% else %}
  <p>
    {% set create_event = path('event.type_add') %}
    {% trans %}
      You have not created any event types yet. Go to the <a href="{{ create_event }}">event type creation page</a> to add a new event type.
    {% endtrans %}
  </p>
{% endif %}
